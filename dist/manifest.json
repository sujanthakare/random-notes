{
  "manifest_version": 3,

  "name": "Random-notes",
  "description": "Handy tool to save notes within your browser.",
  "version": "1.0.0",

  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["storage", "tabs"]
}
